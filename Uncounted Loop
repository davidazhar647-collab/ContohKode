public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.print("Masukkan tekanan sistolik (0 untuk keluar): ");
            int systolic = scanner.nextInt();
            if (systolic == 0) break;

            System.out.print("Masukkan tekanan diastolik: ");
            int diastolic = scanner.nextInt();

            System.out.println("Kategori tekanan darah: " + getCategory(systolic, diastolic) + "\n");
        }

        System.out.println("Terima kasih telah menggunakan aplikasi kesehatan.");
        scanner.close();
    }

    public static String getCategory(int sys, int dia) {
        return (sys < 90 || dia < 60) ? "Hipotensi" :
               (sys > 140 || dia > 90) ? "Hipertensi" : "Normal";
    }
}
